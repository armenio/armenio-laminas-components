{
    "name": "armenio/armenio-laminas-components",
    "description": "A set of components for laminas framework",
    "type": "library",
    "keywords": [
        "form",
        "filter",
        "date",
        "time",
        "datetime",
        "number",
        "i18n",
        "laminas",
        "rafael armenio"
    ],
    "homepage": "https://github.com/armenio/armenio-laminas-components",
    "license": "MIT",
    "authors": [
        {
            "name": "Rafael ArmÃªnio",
            "email": "rafael.armenio@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ~8.0.0 || ~8.1.0 || ~8.2.0 || ~8.3.0",
        "ext-fileinfo": "*",
        "ext-intl": "*",
        "laminas/laminas-filter": "^2.31 || ^2.33",
        "laminas/laminas-mvc-form": "^2.0 || ^2.1"
    },
    "autoload": {
        "psr-4": {
            "Armenio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArmenioTest\\": "test/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.5",
        "phpspec/prophecy-phpunit": "^2.1",
        "phpunit/phpunit": "^9.6 || ^10.5"
    }
}
