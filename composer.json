{
    "name": "armenio/armenio-laminas-components",
    "description": "A set of components for laminas framework",
    "type": "library",
    "keywords": [
        "form",
        "filter",
        "date",
        "time",
        "datetime",
        "number",
        "i18n",
        "laminas",
        "rafael armenio"
    ],
    "homepage": "https://github.com/armenio/armenio-laminas-components",
    "license": "MIT",
    "authors": [
        {
            "name": "Rafael ArmÃªnio",
            "email": "rafael.armenio@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3 || ~8.0.0",
        "ext-fileinfo": "*",
        "ext-intl": "*",
        "laminas/laminas-filter": "^2.11",
        "laminas/laminas-mvc-form": "^1.1"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.3",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Armenio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArmenioTest\\": "test/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
